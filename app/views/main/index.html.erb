    <div class="our-story slide">
        <h1>Our Story</h1>
        <h2>Rollover the timeline</h2>
        <div class="timeline">
            <div class="arrow-left"></div>
            <hr>
            <%= image_tag 'heart.png', class: 'img-responsive heart', id: 'first' %>
            <hr>
            <%= image_tag 'heart.png', class: 'img-responsive heart', id: 'second' %>
            <hr>
            <%= image_tag 'heart.png', class: 'img-responsive heart', id: 'third' %>
            <hr>
